<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dg="clr-namespace:Syncfusion.Maui.DataGrid;assembly=Syncfusion.Maui.DataGrid"
             x:Class="ObservatoryUI.Views.PluginView">
    <Grid>
        <dg:SfDataGrid x:Name="DataGrid" ItemsSource="{Binding}" AutoGenerateColumnsMode="None" ColumnWidthMode="Auto" 
                        BackgroundColor="Black" RowHeight="28" HeaderRowHeight="28"> 
            <dg:SfDataGrid.DefaultStyle>
                <dg:DataGridStyle HeaderRowBackground="{StaticResource Gray600}" HeaderRowTextColor="#e0e0e0"
                                  RowBackground="{StaticResource Gray900}" 
                                  RowTextColor="White" 
                                  SelectionBackground="darkorange" SelectedRowTextColor="Black" >
                       
                </dg:DataGridStyle>
            </dg:SfDataGrid.DefaultStyle>
        </dg:SfDataGrid>
    </Grid>
</ContentView>
