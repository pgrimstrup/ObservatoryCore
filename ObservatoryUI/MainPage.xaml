<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dg="clr-namespace:Syncfusion.Maui.DataGrid;assembly=Syncfusion.Maui.DataGrid"
             x:Class="ObservatoryUI.MainPage">

    <Grid x:Name="MainPageGrid" Padding="4" RowSpacing="2" ColumnSpacing="2"
          RowDefinitions="*,*"
          ColumnDefinitions="*,*"
          BindableLayout.ItemsSource="{Binding Views}">

        <BindableLayout.ItemTemplate>
            <DataTemplate>
                <Border Stroke="Red" StrokeThickness="1" Grid.Column="{Binding Column}" Grid.Row="{Binding Row}" Padding="4">
                    <Grid RowDefinitions="Auto,*">
                        <Label Grid.Row="0" Text="{Binding Plugin.Name}" TextColor="White" FontSize="Subtitle"/>
                        <ContentView Grid.Row="1" Content="{Binding View}" />
                    </Grid>
                </Border>
            </DataTemplate>
        </BindableLayout.ItemTemplate>

        <BindableLayout.EmptyView>
            <Label Text="There are no plugins loaded"/>
        </BindableLayout.EmptyView>
    </Grid>

</ContentPage>
